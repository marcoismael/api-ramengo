{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "paths": {
        "*": ["./node_modules/*", "./src/types/*"]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types",
        "./src/types"
      ],
      "resolveJsonModule": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }